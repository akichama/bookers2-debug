<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', users: @users %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', books: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fa-solid fa-heart" aria-hidden="true"></i>
                <%= @book.favorites.count %>
                <% end %>
              </td>
            <% else %>
            <td>
            <%= link_to book_favorites_path(@book), method: :post do %>
            <i class="fa-regular fa-heart" aria-hidden="true"></i>
            <%= @book.favorites.count %>
            <% end %>
          </td>
        <% end %>
        <% if @book.user == current_user %>
          <td>コメント数： <%= @book.book_comments.count %></td>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        <% end %>
      </tr>
    </div>
    <div>
      <% @book.book_comments.each do |book_comment| %>
      <tr>
        <td>
        <%= image_tag book_comment.user.get_profile_image(100,100) %></p>
        <%= book_comment.user.name %>
        <%= book_comment.comment %>
        </td>
        <td>
        <% if book_comment.user == current_user %>
          <%= link_to "destory", book_book_comment_path(@book, book_comment.id), method: :delete, class: "btn btn-sm btn-danger" %>
        <% end %>
        </td>
      </tr>
      <% end %>
      <tr>
        <td>
          <%= form_with model: [@book, BookComment.new] do |f| %>
            <%= f.text_area :comment, rows:'5' %>
            <%= f.submit "送信" %>
          <% end %>
        </td>
      </tr>
      </table>
    </div>
  </div>
</div>